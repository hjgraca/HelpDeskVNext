@model HelpDeskVNext.Data.Entitidades.Ticket
@inject HelpDeskVNext.Data.Models.IService<HelpDeskVNext.Data.Entitidades.Prioridade, int> PrioridadeService
@inject HelpDeskVNext.Data.Models.IService<HelpDeskVNext.Data.Entitidades.Departamento, int> DepartamentoService

<form asp-controller="Ticket" asp-action="Adicionar" method="post" class="form-horizontal" role="form">
    <h4>Criar ticket</h4>
    <hr />
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Titulo" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Titulo" class="form-control"/>
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Descricao" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="Descricao" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Prioridade" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Prioridade.PrioridadeId" class="form-control"
                    asp-items="PrioridadeService.GetList()"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Departamento" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="DepartamentoId" class="form-control"
                    asp-items="DepartamentoService.GetList()"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Tecnico" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="TecnicoId" class="form-control"
                    asp-items="ViewBag.Utilizadores"></select>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Criar</button>
            <a class="btn btn-danger" asp-controller="Ticket" asp-action="Index" role="button">Cancelar</a>
        </div>
    </div>
</form>

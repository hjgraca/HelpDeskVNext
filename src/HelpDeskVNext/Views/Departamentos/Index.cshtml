@model IEnumerable<HelpDeskVNext.Data.Entitidades.Departamento>


<h2>Gerir departamentos</h2>
<hr />
<br />
<div>
    <a class="btn btn-default" asp-controller="Departamentos" asp-action="Adicionar">Adicionar departamento</a>
</div>
<br/>
<div class="panel panel-default">

    <!-- Table -->
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Nome</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var departamento in Model)
        {
            <tr>
                <td>@departamento.Nome</td>
                <td class="td-actions">
                    <a class="btn btn-warning btn-xs" asp-controller="Departamentos" asp-action="Editar" asp-route-id="@departamento.DepartamentoId">Editar</a>
                    <form asp-controller="Departamentos" asp-action="Apagar" method="post" asp-route-id="@departamento.DepartamentoId" class="form-horizontal" role="form">
                        <input type="submit" class="btn btn-danger btn-xs" value="Apagar" />
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
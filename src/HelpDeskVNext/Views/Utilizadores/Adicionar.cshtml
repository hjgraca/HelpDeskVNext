@model HelpDeskVNext.Data.Models.ApplicationUser

<form asp-controller="Utilizadores" asp-action="Adicionar" method="post" class="form-horizontal" role="form">
    <h4>Criar utilizador</h4>
    <hr />
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nome" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Criar</button>
            <a class="btn btn-danger" asp-controller="Utilizadores" asp-action="Index" role="button">Cancelar</a>
        </div>
    </div>
</form>

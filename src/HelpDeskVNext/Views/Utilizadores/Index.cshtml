@model IEnumerable<HelpDeskVNext.Data.Models.ApplicationUser>


<h2>Gerir utilizadores</h2>
<hr />
<br />
<div>
    <a class="btn btn-default" asp-controller="Account" asp-action="Register" asp-route-login="false">Adicionar utilizador</a>
</div>
<br/>
<div class="panel panel-default">

    <!-- Table -->
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Username</th>
                <th>Departamento</th>
                <th>Acesso</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Nome</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.UserName</td>
                <td>
                    @if (user.Departamento != null)
                    {
                        <a asp-controller="Departamentos" asp-action="List" asp-route-id="@user.Departamento.DepartamentoId">@user.Departamento.Nome</a>
                    }
                </td>
                <td><a asp-controller="Acessos" asp-action="List" asp-route-id="@user.Id">@user.Roles.Count</a></td>
                <td class="td-actions">
                    <a class="btn btn-warning btn-xs" asp-controller="Utilizadores" asp-action="Editar" asp-route-id="@user.Id">Editar</a>
                    <form asp-controller="Utilizadores" asp-action="Apagar" method="post" asp-route-id="@user.Id" class="form-horizontal" role="form">
                        <input type="submit" class="btn btn-danger btn-xs" value="Apagar" />
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>